<i:arg type="String" name="titleKey" default="" />
<i:pragma name="inline" value="true" />
<i:pragma name="description" value="Provides a header fora Wondergem page"/>

<i:if test="isFilled(titleKey)">
    <h1 class="legend">@i18n(titleKey)</h1>
    <i:else>
        <h1 class="legend">
            <i:render name="body" />
        </h1>
    </i:else>
</i:if>