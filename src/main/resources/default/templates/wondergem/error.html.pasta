<i:arg type="String" name="message" />
<w:page title="@i18n('BasicController.error')">
    <i:block name="breadcrumbBar" />

    <w:pageHeader>
        @i18n('BasicController.error')
    </w:pageHeader>

    <div class="well">
        <pre style="font-size: small">@message</pre>
    </div>

    <div class="form-actions">
        <a href="@wondergemRoot" class="btn">
            <i class="fa fa-angle-double-left"></i> @i18n('BasicController.toDashboard')
        </a>
    </div>
</w:page>
